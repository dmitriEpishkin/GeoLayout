<UserControl x:Class="GeoLayout.Views.AddPointMapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeoLayout.Views"
             xmlns:local1="clr-namespace:GeoLayout.ViewElements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Margin="3" Text="Имя новой точки:"/>
        <TextBox Margin="3" Text="{Binding PointName}"/>
        <local1:CoordinatesView x:Name="CoordinatesView"/>
    </StackPanel>
</UserControl>
