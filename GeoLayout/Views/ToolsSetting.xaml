<UserControl x:Class="GeoLayout.Views.ToolsSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeoLayout.Views"
             xmlns:data="clr-namespace:GeoLayout.Domain.Data"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Margin="3,6" Text="Инструмент:"/>
        <ComboBox Margin="3,6" ItemsSource="{Binding Tools}" SelectedItem="{Binding SelectedGeoLayoutTool}">
            <ComboBox.ItemTemplate>
                <DataTemplate DataType="data:IGeoLayoutTool">
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <ContentControl Margin="3,6" Content="{Binding SelectedGeoLayoutTool}" ContentTemplate="{Binding SelectedToolTemplate}"/>

        <Button Content="Выполнить" Command="{Binding RunCommand}"/>

    </StackPanel>
</UserControl>
